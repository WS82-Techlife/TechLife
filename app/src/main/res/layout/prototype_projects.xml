<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvProjects"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="252dp">

        <TextView
            android:id="@+id/tvBox"
            android:layout_width="345dp"
            android:layout_height="181dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/box"
            android:backgroundTint="#7fa208"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProjName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tvBox"
            app:layout_constraintTop_toTopOf="@+id/tvBox"
            tools:text="Name Proj." />

        <TextView
            android:id="@+id/tvProjDescription"
            android:layout_width="307dp"
            android:layout_height="71dp"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/tvBox"
            app:layout_constraintStart_toStartOf="@+id/tvBox"
            app:layout_constraintTop_toBottomOf="@+id/tvProjName"
            tools:text="Description" />

        <TextView
            android:id="@+id/tvProjDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="96dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tvBox"
            app:layout_constraintTop_toBottomOf="@+id/tvProjName"
            tools:text="Duration" />

        <TextView
            android:id="@+id/tvSeparador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/separador_horas"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvProjDuration"
            app:layout_constraintStart_toEndOf="@+id/tvProjDuration" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvProjDuration"
            app:layout_constraintStart_toEndOf="@+id/tvSeparador"
            tools:text="Start" />

        <TextView
            android:id="@+id/tvDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvProjDuration"
            app:layout_constraintStart_toEndOf="@+id/tvSeparador"
            tools:text="Direction" />

        <TextView
            android:id="@+id/tvOngName"
            android:layout_width="118dp"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"

            app:layout_constraintStart_toEndOf="@+id/tvProjName"
            app:layout_constraintTop_toTopOf="@+id/tvBox"
            tools:text="Ong Name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>